{
  "sage_mcp": {
    "server_url": "localhost:3000",
    "timeout": 30,
    "retry_count": 3,
    "retry_delay": 1.0
  },
  "enhancer": {
    "enabled": true,
    "timeout": 45,
    "max_context_turns": 3,
    "cache_enabled": true,
    "cache_ttl": 300
  },
  "archiver": {
    "enabled": true,
    "timeout": 30,
    "backup_enabled": true,
    "backup_retention_days": 30
  },
  "logging": {
    "level": "INFO",
    "file_enabled": true,
    "console_enabled": true,
    "max_file_size": "10MB",
    "backup_count": 5
  },
  "security": {
    "sanitize_logs": true,
    "encrypt_backups": false,
    "max_prompt_length": 10000,
    "max_response_length": 50000
  }
}